---
extends: default

rules:
  line-length: disable
  truthy:
    allowed-values: ['true', 'false', 'yes', 'no']
  comments:
    min-spaces-from-content: 1
  braces:
    min-spaces-inside: 0
    max-spaces-inside: 1

ignore: |
  .cache
  .github/workflows/*.yml
  roles/stats/files/dashboards/ansible-nas.yml
  roles/stats/templates/prometheus.yml
