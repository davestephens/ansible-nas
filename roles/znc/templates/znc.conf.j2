Version = 1.8.2
<Listener l>
        Port = 6677
        IPv4 = true
        IPv6 = true
        SSL = false
</Listener>
LoadModule = webadmin

<User anarion>
        Pass       = plain#{{ znc_user_password }}
        Admin      = true
        Nick       = {{ znc_user_nick }}
        AltNick    = {{ znc_user_altnick }}
        Ident      = {{ znc_user_ident }}
        RealName   = {{ znc_user_real_name }}
        LoadModule = chansaver
        LoadModule = controlpanel
        LoadModule = webadmin

        <Network freenode>
                LoadModule = simple_away
                Server     = chat.freenode.net +6697
        </Network>
</User>
